    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            //以下を追加(直前のポート後ろのカンマも忘れずに)
            "xdebugSettings": {
              "max_children": 1280,
              "max_data": -1,
              "max_depth": 10
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}